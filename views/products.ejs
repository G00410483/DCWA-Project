<!-- stores.ejs -->

<!-- styling.ejs -->
<style>
    table {
      width: 80%;
      margin: auto;
      border-collapse: collapse;
    }
    th, 
    td {
      padding: 10px; 
      text-align: center;
      border: 1px solid #ddd; 
    }
  </style>
  
  <!-- Create a table to display store information -->
  <table>
    <tr>
      <th>PRODUCT ID</th>
      <th>DESCRIPTION</th>
      <th>STORE ID</th>
      <th>LOCATION</th>
      <th>PRICE</th>
      <th></th>
    </tr>
    <!-- Loop through each store in the 'stores' array -->
    <% products.forEach((currentElement) => { %>
      <tr>
        <!-- Display product details in each row -->
        <td><%= currentElement['Product ID'] %></td>
        <td><%= currentElement['Description'] %></td>
        <td><%= currentElement['Store ID'] %></td>
        <td><%= currentElement['Location'] %></td>
        <td><%= currentElement['Price'] %></td>
        <!-- Create a link to the 'Delete' each product -->
        <td><a href="/products/delete/<%= currentElement['Product ID']%>">Delete <%= currentElement['Description'] %></a></td>
      </tr>
    <% }) %>
  </table>
  <!-- Add a link to the home page -->
  <a href='/'>Home</a>
  